{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Launch Current File",
            "request": "launch",
            "mainClass": "${file}"
        },
        {
            "type": "java",
            "name": "Launch SpringBootAdminApplication",
            "request": "launch",
            "mainClass": "org.springframework.samples.petclinic.admin.SpringBootAdminApplication",
            "projectName": "spring-petclinic-admin-server"
        },
        {
            "type": "java",
            "name": "Launch ApiGatewayApplication",
            "request": "launch",
            "mainClass": "org.springframework.samples.petclinic.api.ApiGatewayApplication",
            "projectName": "spring-petclinic-api-gateway"
        },
        {
            "type": "java",
            "name": "Launch ConfigServerApplication",
            "request": "launch",
            "mainClass": "org.springframework.samples.petclinic.config.ConfigServerApplication",
            "projectName": "spring-petclinic-config-server",
            "env": {
                "SPRING_PROFILES_ACTIVE": "native"
            }
        },
        {
            "type": "java",
            "name": "Launch CustomersServiceApplication",
            "request": "launch",
            "mainClass": "org.springframework.samples.petclinic.customers.CustomersServiceApplication",
            "projectName": "spring-petclinic-customers-service"
        },
        {
            "type": "java",
            "name": "Launch DiscoveryServerApplication",
            "request": "launch",
            "mainClass": "org.springframework.samples.petclinic.discovery.DiscoveryServerApplication",
            "projectName": "spring-petclinic-discovery-server"
        },
        {
            "type": "java",
            "name": "Launch VetsServiceApplication",
            "request": "launch",
            "mainClass": "org.springframework.samples.petclinic.vets.VetsServiceApplication",
            "projectName": "spring-petclinic-vets-service",
            "env": {
                "SPRING_PROFILES_ACTIVE": "passwordless",
                "SPRING_DATASOURCE_USERNAME": "fmiguel@microsoft.com"
            }
        },
        {
            "type": "java",
            "name": "Launch VisitsServiceApplication",
            "request": "launch",
            "mainClass": "org.springframework.samples.petclinic.visits.VisitsServiceApplication",
            "projectName": "spring-petclinic-visits-service"
        }
    ]
}
